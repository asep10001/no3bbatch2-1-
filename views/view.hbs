{{!-- UNTUK MODAL --}}
h5#exampleModalLabel {
    font-size: 30px;
    font-weight: bolder;
    margin-right: 25%;
    float:left;
}

button.close{
  float:right;
}

input.form-control {
    border: none;
    border-bottom: solid 2px grey;
    height: 7%;
    width: 75%;
    margin-left: 12%;

}

select.form-control {
  border: none;
    border-bottom: solid 2px grey;
    height: 7%;
